<div>
    <table>
        <tbody>
            <tr>
                <td style="padding-left:26px;"><b>亲爱的 @Model.UserName</b></td>
            </tr>
            <tr>
                <td style="padding-left:26px;">购买商品信息</td>
            </tr>
            <tr>
                <td style="padding-left:26px;">
                    <p>
                        payid：@Model.PayDto.PayId<br>
                        status：@Model.PayDto.Status<br>
                        paytype：@Model.PayDto.PayType<br>
                        alltotalprice：@Model.PayDto.AllTotalPrice<br>
                        datein：@Model.PayDto.Datein<br>
                    </p>
                </td>
            </tr>
        </tbody>
    </table>
    <table>
        <tbody>
            <tr>
                <td style="padding-left:26px;"><b>购买商品明细</b></td>
            </tr>
            @if (Model.CartDtos != null)
            {
                foreach (var item in Model.CartDtos)
                {
                    <tr>
                        <td style="padding-left:26px;">
                            <p>
                                title：@item.Title<br>
                                type：@item.Type<br>
                                totalprice：@item.TotalPrice<br>
                                num：@item.Num<br>
                                datein：@item.Datein<br>
                                pid：@item.Pid<br>
                            </p>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br><br><div style="width:1px;height:0px;overflow:hidden"><img style="width:0;height:0" src="http://sendcloud_track.usermail.nowcoder..gif"></div>

    <style type="text/css">
        .qmbox style, .qmbox script, .qmbox head, .qmbox link, .qmbox meta {
            display: none !important;
        }
    </style>
</div>