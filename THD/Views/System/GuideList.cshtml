@{
    ViewData["Title"] = "导游管理";
}

<div class="guideInfo2" id="section-2">
    <table>
        <tr>
            <td>导游名称：</td>
            <td><input class="form-control" type="text" v-model="iptTitle" /></td>
            <td>导游类别：</td>
            <td>
                <input class="form-control" type="text" v-model="iptType" />
            </td>
            <td>
                <input type="button" class="ic_shoulei hide_txt png btn btn-primary btn-lg btnShoppingCart" value="查询" @@click="handleGetGuides" />
                <input type="button" class="ic_shoulei hide_txt png btn btn-primary btn-lg btnShoppingCart" value="清空" @@click="handleClear" />
            </td>
        </tr>
    </table>
</div>
<div class="listTop">

    <table>
        <tbody v-for="(guide, i) in guides">
            <tr>
                <td style="width: 20%; vertical-align: top;" rowspan="4">
                    <img :src="guide.img1" style="width: 300px; height: 173px; margin: 5px;" alt="">
                </td>
                <td colspan="5" style="height: 40px; font-size: 19px; text-align: left; color: #00A600; font-weight: bold; padding-left: 10px;">
                    <span id="ctl00_body_RepeaterAllListInfo_ctl00_Label1">{{guide.title}}</span>
                </td>
            </tr>
            <tr>
                <td colspan="6" style="text-align: left;">
                    <span style="border: 1px solid #666666; margin: 15px; font-size: 12px; color: #666666; padding: 2px; width: 30%;">类型</span>{{guide.type}}
                    <span style="border: 1px solid #666666; margin: 15px; font-size: 12px; color: #666666; padding: 2px; width: 30%;">区域</span>{{guide.area}}
                    <span style="border: 1px solid #666666; margin: 15px; font-size: 12px; color: #666666; padding: 2px; width: 30%;">天数</span>
                    <span style="border: 1px solid #666666; margin: 15px; font-size: 12px; color: #666666; padding: 2px; width: 30%;">惊喜</span>
                </td>
            </tr>
            <tr>
                <td colspan="5" style="padding-left: 10px; text-align: left;">{{guide.type}}</td>
                <td style="text-align: center; width: 200px; vertical-align: middle;">
                    ￥<span id="ctl00_body_RepeaterAllListInfo_ctl00_Label2" style="color:#FF3300;font-size:36px;">{{guide.price}}</span>元
                    <br>
                    <span>
                        <a :href="'/system/AddGuide/' + guide.id">
                            <input type="button" class="btn btn-primary" value="编辑">
                        </a>
                    </span>
                    &nbsp;
                    <span>
                        <input type="button" class="btn btn-primary" @@click="handleDelete(guide.id)" value="删除">
                    </span>
                </td>
            </tr>
        </tbody>
    </table>

    <table border="0">
        <tr>
            <td colspan="5" style="border-bottom:0px !important">
                <el-pagination v-model:current-page="pagination.pageIndex"
                               :page-sizes="[12, 24, 36]"
                               v-model:page-size="pagination.pageSize"
                               layout="total, sizes, prev, pager, next, jumper"
                               :total="pagination.totalCount"
                               @@size-change="handleGetGuides"
                               @@current-change="handleGetGuides">
                </el-pagination>
            </td>
        </tr>
    </table>
</div>


@section Scripts{

    <script>
        createVueApp({
            /*返回行程数据*/
            data() {
                return {
                    guides: [],
                    pagination: {
                        pageIndex: 1,
                        pageSize: 12,
                        totalCount: 0,
                    },
                    iptTitle: '',
                    iptType: ''
                }
            },
            /*页面加载完成后回调下方的行程列表方法*/
            mounted() {
                this.handleGetGuides();
            },
            /*获取行程列表*/
            methods: {
                handleGetGuides() {
                    this.pagination.Title = this.iptTitle
                    this.pagination.Type = this.iptType
                    this.getGuides(this.pagination).then(res => {
                        this.guides = res.items
                        this.pagination.totalCount = res.totalCount
                    })
                },
                handleTabClick() {

                },

                /*发送请求*/
                getGuides(pagination) {
                    return this.$http.post('/guide/getlist', pagination)
                },
                handleClear() {
                    this.iptTitle = ''
                    this.iptType = ''
                },
                handleDelete(id) {
                    this.$http.post('/system/deleteGuide', id).then(res => {
                        if (res) {
                            this.handleGetGuides()
                        } else {
                            this.$message({
                                message: '删除失败',
                                type: 'error'
                            });
                        }
                    })
                }
            }
        })

    </script>
}
