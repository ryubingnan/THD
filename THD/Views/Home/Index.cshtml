            //isReady && $('#formSubmit').submit();
        })

        function checkForm() {
            return checkName();
        }

        //input判断
        $('#Name').blur(function () { // 用户名
            return checkName();
        })
        $('#Alias').blur(function () { // 别名
            return checkAlias();
        })
        $('#Phone').blur(function () { // 电话
            return checkPhone();
        })
        $('#Email').blur(function () { // 邮箱
            return checkEmail();
        })
        $('#Password').blur(function () { // 密码
            return checkPwd();
        })

        function checkName() {
            var val = $("#Name").val();
            var tip = $("#Name").next('.reg-form-error');
            if (!val) {
                tip.text('お名前をご入力ください。').css('visibility', 'visible');
                isReady = false;
            } else {
                if (val.length < 3) {
                    tip.text('最小値が3桁です。').css('visibility', 'visible');
                    isReady = false;
                } else {
                    tip.css('visibility', 'hidden');
                    isReady = true;
                }
            }
            return isReady;
        }
        function checkAlias() {
            var val = $('#Alias').val();
            var tip = $('#Alias').next('.reg-form-error');
            if (!val) {
                tip.text('カタカナをご入力ください。').css('visibility', 'visible');
                isReady = false;
            } else {
                if (val.length < 3) {
                    tip.text('最小値が3桁です。').css('visibility', 'visible');
                    isReady = false;
                } else {
                    tip.css('visibility', 'hidden');
                    isReady = true;
                }
            }
            return isReady;
        }

        function checkPhone() {
            var val = $('#Phone').val();
            var tip = $('#Phone').next('.reg-form-error');
            if (!val) {
                tip.text('電話番号をご入力ください。').css('visibility', 'visible');
