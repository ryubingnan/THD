            $('#regTip').show();
            $('#regNeed').show();
            $('#regNoNeed').hide();
            needForm = true;

            var v1 = checkForm();
            var v2 = checkAlias();
            var v3 = checkPhone();
            var v4 = checkEmail();
            var v5 = checkPwd();
            var v6 = checkSel();

            var isvalid = v1 && v2 && v3 && v4 && v5 && v6;
            return isvalid;

            //if (isReady) {
